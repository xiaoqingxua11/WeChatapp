<view class="container">
 <!-- 头部 -->
 <image class="head-image" src="{{headImgSrc}}"></image>
  <!-- 作者 -->
  <view class="author-date">
  <image class="avator" src="{{avatar}}"></image>
  <text class="author">{{author}}</text>
  <text class="const-text">发表于</text>
  <text class="date">{{dateTime}}</text>
  </view>
  <!-- 标题 -->
  <text class="title">{{title}}</text>
  <view class="image-container">
  <image class="collected" wx:if="{{collected}}" bindtap="onCollectionTap" src="/images/icon/collection.png"></image>
   <image  class="collected" wx:else bindtap="onCollectionTap" src="/images/icon/collection-anti.png"></image>
  <image  class="share" bindtap="onShareTap" src="/images/icon/share.png"></image>
  </view>
  <!-- 文章详情 -->
  <text class="detail">{{detail}}</text>
</view>
